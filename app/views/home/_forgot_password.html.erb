
  <div class="modal fade" id="applicationEmailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= t "devise.passwords.send_new_password" %></h4>
        </div>
        
          <div class="modal-body clearfix">
            <%= label_tag :send_instructions, t("devise.passwords.send_instructions") %>
              <br/>           
          </div>
          <div class="modal-footer">        
            <%= simple_form_for :forgot_password, url: forgot_password_path do |f| %>            
            <%= f.input :email, id: "email", style: "height: auto; !important" %>
            <%= f.submit t("devise.passwords.request"), class: "btn btn-large btn-primary" %>
            <% end %>   
          </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
